<h2>New recipe</h2>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :picture_url %>
  <%= f.text_field :picture_url %>

  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions %>

  <%= f.submit "Submit" %>
<% end %>
